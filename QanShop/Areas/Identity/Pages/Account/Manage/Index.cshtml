@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>Thiết Lập Tài Khoản Cá Nhân</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <div>
                    <label asp-for="Username" class="form-label">Tài Khoản</label>
                </div>
                <div>
                    <input asp-for="Username" class="form-control" placeholder="Nhập tài khoản." disabled />
                </div>
                
            </div>
            <div class="form-floating mb-3">
                <div>
                    <label asp-for="Input.PhoneNumber" class="form-label">Số Điện Thoại</label>
                </div>
                <div>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại." />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating mb-3">
                <div>
                    <label asp-for="Input.FullName" class="form-label">Họ và Tên</label>
                </div>
                <div>
                    <input asp-for="Input.FullName" class="form-control" placeholder="Nhập họ và tên." />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating mb-3">
                <div>
                    <label asp-for="Input.Address" class="form-label">Địa Chỉ</label>
                </div>
                <div>
                    <input asp-for="Input.Address" class="form-control" placeholder="Nhập họ và tên." />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Lưu</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
